<div class='input'>
  <input
    type='{{type}}'
		{{#if error}} class="input__field-error"{{/if}}
    name='{{name}}'
    id='{{name}}'
    autocomplete='off'
    placeholder='label'
  />
  <label for='{{name}}' class='input__label'>{{label}}</label>
  {{#if errorText}}
    <span class='input__error'>{{errorText}}</span>
  {{/if}}
</div>